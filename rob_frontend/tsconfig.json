{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/ts"
  ],
  "exclude": [
    "/node_modules",
    "/build"
  ]
}