{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "include": [
    "./src/ts"
  ],
  "exclude": [
    "/node_modules",
    "/build"
  ]
}